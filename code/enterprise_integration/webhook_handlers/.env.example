# Environment Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
DB_PASSWORD=secure-database-password
REDIS_PASSWORD=secure-redis-password

# Database Configuration
DATABASE_URL=postgresql://webhook:secure-database-password@postgres:5432/webhooks

# Cache Configuration
CACHE_URL=redis://:secure-redis-password@redis:6379/0

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Optional: External webhook URLs
STRIPE_WEBHOOK_URL=https://yourdomain.com/webhook/stripe
GITHUB_WEBHOOK_URL=https://yourdomain.com/webhook/github
CUSTOM_WEBHOOK_URL=https://yourdomain.com/webhook/custom
